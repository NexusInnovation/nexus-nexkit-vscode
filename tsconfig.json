{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"outDir": "out",
		"sourceMap": true,
		"inlineSourceMap": false,
		"inlineSources": false,
		"rootDir": ".",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"src/test"
	]
}
