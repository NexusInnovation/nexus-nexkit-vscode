{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"outDir": "out",
		"sourceMap": true,
		"inlineSourceMap": false,
		"inlineSources": false,
		"sourceRoot": "../src",
		"rootDir": "src",
		"strict": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
