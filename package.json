{
  "name": "nexkit-vscode",
  "displayName": "Nexkit",
  "description": "VS Code extension for Nexkit CLI",
  "version": "0.4.2",
  "publisher": "nexusinno",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexusinno/nexkit-vscode.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "dependencies": {
    "applicationinsights": "^2.9.6"
  },
  "activationEvents": [
    "onChatParticipant:nexkit-vscode.nexkit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nexkit-vscode.initProject",
        "title": "Nexkit: Initialize Project",
        "category": "Nexkit"
      },
      {
        "command": "nexkit-vscode.checkExtensionUpdate",
        "title": "Nexkit: Check for Updates",
        "category": "Nexkit"
      },
      {
        "command": "nexkit-vscode.installUserMCPs",
        "title": "Nexkit: Install User MCP Servers",
        "category": "Nexkit"
      },
      {
        "command": "nexkit-vscode.configureAzureDevOps",
        "title": "Nexkit: Enable Azure DevOps MCP",
        "category": "Nexkit"
      },
      {
        "command": "nexkit-vscode.openSettings",
        "title": "Nexkit: Open Settings",
        "category": "Nexkit"
      },
      {
        "command": "nexkit-vscode.restoreBackup",
        "title": "Nexkit: Restore Template Backup",
        "category": "Nexkit"
      },
      {
        "command": "nexkit-vscode.updateTemplates",
        "title": "Nexkit: Update Templates",
        "category": "Nexkit"
      },
      {
        "command": "nexkit-vscode.reinitializeProject",
        "title": "Nexkit: Re-initialize Project",
        "category": "Nexkit"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nexkit-sidebar",
          "title": "Nexkit",
          "icon": "media/Nexus_Symbole_MONOCHROME.svg"
        }
      ]
    },
    "views": {
      "nexkit-sidebar": [
        {
          "id": "nexkitPanelView",
          "name": "Nexkit Home",
          "icon": "media/Nexus_Symbole_MONOCHROME.svg",
          "type": "webview"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "nexkit-vscode.nexkit",
        "name": "nexkit",
        "description": "Nexkit development assistant with specialized commands for implementation, refinement, commits, and more.",
        "isSticky": true,
        "commands": [
          {
            "name": "nexkit.implement",
            "description": "Complete implementation workflow with planning, development, testing, and review phases"
          },
          {
            "name": "nexkit.refine",
            "description": "Refine and improve existing code with detailed analysis and suggestions"
          },
          {
            "name": "nexkit.commit",
            "description": "Generate conventional commit messages based on staged changes"
          },
          {
            "name": "nexkit.document",
            "description": "Generate comprehensive documentation for code"
          },
          {
            "name": "nexkit.review",
            "description": "Perform detailed code review with best practices and suggestions"
          },
          {
            "name": "nexkit.refactor",
            "description": "Refactor code with improvements for maintainability and performance"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Nexkit",
      "properties": {
        "nexkit.init.promptForLanguages": {
          "type": "boolean",
          "default": true,
          "description": "Prompt for programming languages during project initialization."
        },
        "nexkit.init.createVscodeSettings": {
          "type": "boolean",
          "default": true,
          "description": "Create .vscode/settings.json during initialization."
        },
        "nexkit.init.createGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Create .gitignore during initialization."
        },
        "nexkit.extension.autoCheckUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for extension updates on activation."
        },
        "nexkit.extension.updateCheckInterval": {
          "type": "number",
          "default": 24,
          "description": "Hours between automatic extension update checks."
        },
        "nexkit.extension.promptTemplateUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Prompt to update templates when extension is updated."
        },
        "nexkit.telemetry.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable telemetry to help improve Nexkit. Respects VS Code's global telemetry setting. No personally identifiable information is collected."
        },
        "nexkit.telemetry.connectionString": {
          "type": "string",
          "default": "",
          "description": "Azure Application Insights connection string (optional, for custom telemetry endpoint)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run check:types && npm run lint && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "check:types": "tsc --noEmit",
    "test-compile": "tsc -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "test:unit": "node ./out/test/runTest.js --grep 'Unit'",
    "test:integration": "node ./out/test/runTest.js --grep 'Integration'",
    "test:coverage": "nyc --reporter=lcovonly --reporter=text node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "version:bump": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "publish-private": "npm version patch --tag-version-prefix=v && git push && git push --tags"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@cyclonedx/cyclonedx-npm": "^1.19.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/adm-zip": "^0.5.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "conventional-changelog-cli": "^5.0.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.36.0",
    "glob": "^11.0.0",
    "mocha": "^10.0.10",
    "nyc": "^15.1.0",
    "semantic-release": "^24.2.0",
    "sinon": "^19.0.2",
    "@types/sinon": "^17.0.3",
    "typescript": "^5.9.3"
  }
}