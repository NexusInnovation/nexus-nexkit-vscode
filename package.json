{
  "name": "nexus-nexkit-vscode",
  "displayName": "Nexkit",
  "description": "VS Code extension for Nexkit",
  "version": "3.1.0-beta.1",
  "publisher": "NexusInnovation",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NexusInnovation/nexus-nexkit-vscode.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "dependencies": {
    "applicationinsights": "^2.9.6",
    "prettier": "^3.7.4"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "icons": {
      "custom-mcp": {
        "description": "MCP icon",
        "default": {
          "fontPath": "media/mcp.woff",
          "fontCharacter": "\\E900"
        }
      }
    },
    "commands": [
      {
        "command": "nexus-nexkit-vscode.initWorkspace",
        "title": "Nexkit: Initialize Workspace",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.resetWorkspace",
        "title": "Nexkit: Reset Workspace",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.checkExtensionUpdate",
        "title": "Nexkit: Check for Updates",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.installUserMCPs",
        "title": "Nexkit: Install User MCP Servers",
        "category": "Nexkit",
        "icon": "$(custom-mcp)"
      },
      {
        "command": "nexus-nexkit-vscode.openSettings",
        "title": "Nexkit: Open Settings",
        "category": "Nexkit",
        "icon": "$(gear)"
      },
      {
        "command": "nexus-nexkit-vscode.restoreBackup",
        "title": "Nexkit: Restore Template Backup",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.cleanupBackup",
        "title": "Nexkit: Cleanup Template Backups",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.updateInstalledTemplates",
        "title": "Nexkit: Update Installed Templates",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.saveProfile",
        "title": "Nexkit: Save Current Profile",
        "category": "Nexkit",
        "icon": "$(save)"
      },
      {
        "command": "nexus-nexkit-vscode.applyProfile",
        "title": "Nexkit: Apply Profile",
        "category": "Nexkit",
        "icon": "$(rocket)"
      },
      {
        "command": "nexus-nexkit-vscode.deleteProfile",
        "title": "Nexkit: Delete Profile",
        "category": "Nexkit",
        "icon": "$(trash)"
      },
      {
        "command": "nexus-nexkit-vscode.switchMode",
        "title": "Nexkit: Switch Operation Mode",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.addDevOpsConnection",
        "title": "Nexkit: Add Azure DevOps Connection",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.removeDevOpsConnection",
        "title": "Nexkit: Remove Azure DevOps Connection",
        "category": "Nexkit"
      },
      {
        "command": "nexus-nexkit-vscode.showLogs",
        "title": "Nexkit: Show Logs",
        "category": "Nexkit",
        "icon": "$(output)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nexus-nexkit-vscode.saveProfile",
          "when": "view == nexkitPanelView",
          "group": "navigation@1"
        },
        {
          "command": "nexus-nexkit-vscode.applyProfile",
          "when": "view == nexkitPanelView",
          "group": "navigation@2"
        },
        {
          "command": "nexus-nexkit-vscode.installUserMCPs",
          "when": "view == nexkitPanelView",
          "group": "navigation@3"
        },
        {
          "command": "nexus-nexkit-vscode.openSettings",
          "when": "view == nexkitPanelView",
          "group": "navigation@4"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nexkit-sidebar",
          "title": "Nexkit",
          "icon": "media/Nexus_Symbole_MONOCHROME.svg"
        }
      ]
    },
    "views": {
      "nexkit-sidebar": [
        {
          "id": "nexkitPanelView",
          "icon": "media/Nexus_Symbole_MONOCHROME.svg",
          "type": "webview",
          "name": "Welcome!"
        }
      ]
    },
    "configuration": {
      "title": "Nexkit",
      "properties": {
        "nexkit.repositories": {
          "type": "array",
          "default": [
            {
              "name": "Awesome Copilot",
              "type": "github",
              "url": "https://github.com/github/awesome-copilot",
              "enabled": true,
              "paths": {
                "agents": "agents",
                "prompts": "prompts",
                "skills": "skills",
                "instructions": "instructions"
              }
            }
          ],
          "scope": "application",
          "markdownDescription": "Additional repository sources for agents, prompts, and instructions. Supports both **GitHub repositories** and **local folders**. Default repository \"Nexus Templates\" is always included.\n\n**GitHub Example:**\n```json\n{\n  \"name\": \"My GitHub Repo\",\n  \"type\": \"github\",\n  \"url\": \"https://github.com/owner/repo\",\n  \"enabled\": true,\n  \"paths\": { \"agents\": \"agents\" }\n}\n```\n\n**Local Folder Example:**\n```json\n{\n  \"name\": \"My Local Templates\",\n  \"type\": \"local\",\n  \"url\": \"./templates\",\n  \"enabled\": true,\n  \"paths\": { \"prompts\": \"prompts\" }\n}\n```",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for the repository"
              },
              "type": {
                "type": "string",
                "enum": [
                  "github",
                  "local"
                ],
                "default": "github",
                "description": "Repository type: 'github' for GitHub repositories, 'local' for local folders"
              },
              "url": {
                "type": "string",
                "description": "GitHub repository URL (e.g., https://github.com/owner/repo) or local folder path (e.g., ./templates, C:\\templates, ~/templates)"
              },
              "branch": {
                "type": "string",
                "default": "main",
                "description": "Git branch to use (GitHub repositories only)"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable or disable this repository"
              },
              "paths": {
                "type": "object",
                "description": "Paths to different content types in the repository",
                "properties": {
                  "agents": {
                    "type": "string",
                    "description": "Path to agents directory"
                  },
                  "prompts": {
                    "type": "string",
                    "description": "Path to prompts directory"
                  },
                  "skills": {
                    "type": "string",
                    "description": "Path to skills directory"
                  },
                  "instructions": {
                    "type": "string",
                    "description": "Path to instructions directory"
                  },
                  "chatmodes": {
                    "type": "string",
                    "description": "Path to chatmodes directory"
                  }
                }
              }
            },
            "required": [
              "name",
              "url",
              "paths"
            ]
          }
        },
        "nexkit.extension.autoCheckUpdates": {
          "type": "boolean",
          "default": true,
          "scope": "application",
          "description": "Automatically check for extension updates on activation."
        },
        "nexkit.extension.updateCheckInterval": {
          "type": "number",
          "default": 24,
          "scope": "application",
          "description": "Hours between automatic extension update checks."
        },
        "nexkit.mcpSetup.dismissed": {
          "type": "boolean",
          "default": false,
          "scope": "application",
          "description": "Whether the user has dismissed the MCP setup notification."
        },
        "nexkit.telemetry.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "application",
          "description": "Enable telemetry to help improve Nexkit. Respects VS Code's global telemetry setting. No personally identifiable information is collected."
        },
        "nexkit.telemetry.connectionString": {
          "type": "string",
          "default": "InstrumentationKey=36541b20-0c16-4477-9d5c-d6990c51bafd;IngestionEndpoint=https://canadaeast-0.in.applicationinsights.azure.com/;LiveEndpoint=https://canadaeast.livediagnostics.monitor.azure.com/;ApplicationId=d5494809-608d-4364-a30e-feaeb0769286",
          "scope": "application",
          "description": "Azure Application Insights connection string (optional, for custom telemetry endpoint)."
        },
        "nexkit.mode": {
          "type": "string",
          "enum": [
            "Developers",
            "APM"
          ],
          "default": "Developers",
          "scope": "application",
          "description": "Nexkit operation mode. Developers mode shows all features (Actions, Profiles, Templates, Repositories). APM mode shows only essential features."
        },
        "nexkit.profiles.confirmBeforeSwitch": {
          "type": "boolean",
          "default": true,
          "scope": "application",
          "description": "Ask to save current templates before switching profiles if changes are detected. When enabled, you'll be prompted to update your last applied profile or save as new before switching."
        },
        "nexkit.profiles": {
          "type": "array",
          "default": [],
          "scope": "application",
          "description": "Saved template profiles for quick workspace setup. Each profile is a collection of templates that can be applied to a workspace.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Profile name"
              },
              "templates": {
                "type": "array",
                "description": "Collection of templates in this profile",
                "items": {
                  "type": "object"
                }
              },
              "createdAt": {
                "type": "number",
                "description": "Timestamp when profile was created"
              },
              "updatedAt": {
                "type": "number",
                "description": "Timestamp when profile was last updated"
              }
            }
          }
        },
        "nexkit.userMode": {
          "type": "string",
          "enum": [
            "APM",
            "Developer",
            "notset"
          ],
          "default": "notset",
          "scope": "application",
          "markdownDescription": "User mode for Nexkit. **APM Mode** provides optimized templates and settings for Application Performance Management workflows. **Developer Mode** provides comprehensive development tools and templates."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run esbuild",
    "build": "npm run esbuild",
    "watch": "node esbuild.config.js --watch",
    "package": "npm run check:types && npm run lint && node esbuild.config.js --production",
    "esbuild-base": "node esbuild.config.js",
    "esbuild": "node esbuild.config.js",
    "esbuild-watch": "node esbuild.config.js --watch",
    "check:types": "tsc --noEmit",
    "test-compile": "tsc -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "test:unit": "node ./out/test/runTest.js",
    "test:integration": "node ./out/test/runTest.js",
    "test:coverage": "nyc --reporter=lcovonly --reporter=text node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"**/*.{ts,tsx,js}\"",
    "version:bump": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "publish-private": "npm version patch --tag-version-prefix=v && git push && git push --tags",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@preact/preset-vite": "^2.9.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/adm-zip": "^0.5.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "conventional-changelog-cli": "^4.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.36.0",
    "glob": "^11.0.0",
    "mocha": "^10.0.10",
    "nyc": "^15.1.0",
    "preact": "^10.25.4",
    "semantic-release": "^25.0.2",
    "sinon": "^19.0.2",
    "typescript": "^5.9.3"
  }
}
